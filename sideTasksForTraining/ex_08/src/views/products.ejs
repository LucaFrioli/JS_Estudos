<%- include('includes/header') -%>

<main role="main">
	<nav class="filterPorductsMenu">
		<form action="/products/search" method="get" class="filterProductsForm">
		  <% for (const category of categoryArray) { %>
			<label for="<%= category %>"><%= category %></label>
			<input type="checkbox" name="category[]" value="<%= category %>" id="<%= category %>">
		  <% } %>
		  <button>Pesquisar</button>
		</form>
	</nav>


	<section class="ProductsDisplay">
	<% for (const product of arrayProducts) { %>
		<div class="productCard">
			<h2 class="name"><%= product.name %></h2>
			<p class="category"> Categoria : <b><%= product.category %></b></p>
			<p class="price">R$ <%= product.price.toFixed(2).replace('.',',') %></p>
			<p class="description"> <%= product.description %></p>
			<a href="/products/<%= product.id %>">Saiba mais</a>
		</div>
	<% } %>
	</section>

</main>

<%- include('includes/footer') -%>
