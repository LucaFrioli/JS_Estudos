<%- include('includes/head') -%> <%- include('includes/header') -%>

<main id="login">

	<div class="CTA">
		<h1>Realize seu Login:</h1>
		<%- include('includes/messages') -%>
	</div>

	<form action="/login/logged" method="post" class="responsive-form">
		<label for="Email">Email : </label>
		<input type="email" name="Email" id="Email" placeholder="Seu Email" />
		<label for="Pswd">Senha : </label>
		<input type="password" name="Pswd" id="Pswd" placeholder="Sua Senha" />
		<input type="hidden" name="_csrf" value="<%= csrfToken %>">
		<button>Entrar</button>
	</form>

	<a href="/login/register" rel="noopener noreferrer">Ou Cadastre-se</a>


</main>

<%- include('includes/footer') -%>
